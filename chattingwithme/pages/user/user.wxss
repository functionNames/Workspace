/* pages/authorize/authorize.wxss */

page {
  background-color: #f1f1f1;
}

/* 整个登录样式 */

.myLogin {
  width: 100%;
  height: 125px;
}

/* 登录背景 */

.myLoginImg {
  height: 100%;
  width: 100%;
}

/* 登录头像 */

.head {
  height: 50px;
  width: 50px;
  margin: 0 auto;
}

.headimg {
  height: 50px;
  width: 50px;
  border-radius: 50%;
}

/* 登录按钮 */

.btn {
  width: 80px;
  background-color: rgba(229, 229, 229, 0.158);
  color: #fff;
  height: 25px;
  line-height: 25px;
  margin-top: 5px;
}

/* 清楚按钮样式 */

button::after {
  border: none;
}

.plain {
  border: none;
  border-color: transparent;
}

/* 用户名或者登录 */

.headText {
  color: #fff;
  margin: 0 auto;
  text-align: center;
}

.margintop25 {
  margin-top: 25px;
}

.margintop15 {
  margin-top: 13px;
}

.contan {
  margin-top: 10px;
  background-color: #fff;
}
