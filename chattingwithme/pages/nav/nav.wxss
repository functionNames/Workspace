/* pages/nav/nav.wxss */

.nav {
  background: black;
  width: 100%;
  height: 100%;
}

.nav ul {
  /* box-sizing: border-box; */
  display: flex;
}

.nav ul view {
  flex: 1;
  border: 1px solid #fff;
  height: 85px;
  position: relative;
  box-sizing: border-box;
  flex: 1;
}

.nav ul view li span {
  font-size: 18px;
  color: #fff;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

page {
  background: black;
}

.navs {
  width: calc(100%/3.06);
  height: 160rpx;
  border: 1px solid #fff;
  line-height: 160rpx;
  text-align: center;
  margin:0px auto;
}

.content {
  display: flex;
  flex-wrap: wrap;
}

.hotbtn {
  border: 1px solid #ededed;
  background-color: #fff;
  width: calc(100%/5.42);
  height: 48px;
  line-height: 48px;
  text-align: center;
  margin: 4px 3% 4px 3%;
}
